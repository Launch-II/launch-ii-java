<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:orientation="vertical"
            android:scrollbarThumbVertical="?attr/ScrollBarColour"
            android:background="?attr/PanelTransparency">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MainViewSideMargin"
        android:layout_marginRight="@dimen/MainViewSideMargin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/war"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/txtName2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/imgAvatar1"
                android:layout_width="@dimen/PlayerInfoIconSize"
                android:layout_height="@dimen/PlayerInfoIconSize"
                android:layout_gravity="left"
                android:layout_margin="@dimen/MainViewSpacing"
                android:padding="@dimen/ButtonImagePadding"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/imgAvatar2"
                android:layout_width="@dimen/PlayerInfoIconSize"
                android:layout_height="@dimen/PlayerInfoIconSize"
                android:layout_gravity="right"
                android:layout_margin="@dimen/MainViewSpacing"
                android:padding="@dimen/ButtonImagePadding"
                android:layout_weight="1"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/SeparatorThickness"
            android:background="?attr/ButtonEdgeColour"
            android:layout_marginTop="@dimen/SeperatorMargins"
            android:layout_marginBottom="@dimen/SeperatorMargins"/>

        <TextView
            android:id="@+id/txtGettingStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?attr/WarningColour"
            android:text="@string/getting_stats"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/lytStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lytWinning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtWinning1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/WarningColour"
                    android:text="@string/winning"/>

                <TextView
                    android:id="@+id/txtDraw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/WarningColour"
                    android:text="@string/draw"/>

                <TextView
                    android:id="@+id/txtWinning2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/WarningColour"
                    android:text="@string/winning"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/SeparatorThickness"
                android:background="?attr/ButtonEdgeColour"
                android:layout_marginTop="@dimen/SeperatorMargins"
                android:layout_marginBottom="@dimen/SeperatorMargins"/>

            <LinearLayout
                android:id="@+id/lytKills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtKills1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="kills1"/>

                <TextView
                    android:id="@+id/txtKillsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/InfoColour"
                    android:text="@string/kills"/>

                <TextView
                    android:id="@+id/txtKills2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="kills2"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/SeparatorThickness"
                android:background="?attr/ButtonEdgeColour"
                android:layout_marginTop="@dimen/SeperatorMargins"
                android:layout_marginBottom="@dimen/SeperatorMargins"/>

            <LinearLayout
                android:id="@+id/lytDeaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDeaths1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="deaths1"/>

                <TextView
                    android:id="@+id/txtDeathsTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/InfoColour"
                    android:text="@string/deaths"/>

                <TextView
                    android:id="@+id/txtDeaths2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="deaths2"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/SeparatorThickness"
                android:background="?attr/ButtonEdgeColour"
                android:layout_marginTop="@dimen/SeperatorMargins"
                android:layout_marginBottom="@dimen/SeperatorMargins"/>

            <LinearLayout
                android:id="@+id/lytIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtIncome1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="Â£10000000"/>

                <TextView
                    android:id="@+id/txtIncometitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/InfoColour"
                    android:text="@string/income"/>

                <TextView
                    android:id="@+id/txtIncome2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="Â£10000000"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/SeparatorThickness"
                android:background="?attr/ButtonEdgeColour"
                android:layout_marginTop="@dimen/SeperatorMargins"
                android:layout_marginBottom="@dimen/SeperatorMargins"/>

            <TextView
                android:id="@+id/txtDamageInflictedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/InfoColour"
                android:text="@string/damage_inflicted"/>

            <LinearLayout
                android:id="@+id/lytOffenceHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDamageInflicted1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="10000hp"/>

                <TextView
                    android:id="@+id/txtInflictedDamageTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/InfoColour"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/damage"/>

                <TextView
                    android:id="@+id/txtDamageInflicted2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="10000hp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytOffenceCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOffenceSpending1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="Â£1000000"/>

                <TextView
                    android:id="@+id/txtOffenceSpendingTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/InfoColour"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/cost"/>

                <TextView
                    android:id="@+id/txtOffenceSpending2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="Â£1000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytOffenceEfficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOffenceEfficiency1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="0000.00Â£/hp"/>

                <TextView
                    android:id="@+id/txtOffenceEfficiencyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/InfoColour"
                    android:text="@string/efficiency"/>

                <TextView
                    android:id="@+id/txtOffenceEfficiency2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="0000.00Â£/hp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/SeparatorThickness"
                android:background="?attr/ButtonEdgeColour"
                android:layout_marginTop="@dimen/SeperatorMargins"
                android:layout_marginBottom="@dimen/SeperatorMargins"/>

            <TextView
                android:id="@+id/txtDamageReceivedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="?attr/InfoColour"
                android:text="@string/damage_received"/>

            <LinearLayout
                android:id="@+id/lytDefenceHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDamageReceived1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="10000hp"/>

                <TextView
                    android:id="@+id/txtReceivedDamageTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/InfoColour"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/damage"/>

                <TextView
                    android:id="@+id/txtDamageReceived2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="10000hp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytDefenceCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDefenceSpending1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="Â£1000000"/>

                <TextView
                    android:id="@+id/txtDefenceSpendingTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/InfoColour"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:text="@string/cost"/>

                <TextView
                    android:id="@+id/txtDefenceSpending2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="Â£1000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytDefenceEfficiency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDefenceEfficiency1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:text="0000.00Â£/hp"/>

                <TextView
                    android:id="@+id/txtDefenceEfficiencyTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?attr/InfoColour"
                    android:text="@string/efficiency"/>

                <TextView
                    android:id="@+id/txtDefenceEfficiency2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="0000.00Â£/hp"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/SeparatorThickness"
            android:background="?attr/ButtonEdgeColour"
            android:layout_marginTop="@dimen/SeperatorMargins"
            android:layout_marginBottom="@dimen/SeperatorMargins"/>

        <LinearLayout
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/MainViewSpacing"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgUpdate"
                android:layout_width="@dimen/MediumButtonSize"
                android:layout_height="@dimen/MediumButtonSize"
                android:background="@drawable/text_button_normal"
                android:padding="@dimen/ButtonImagePadding"
                android:src="@drawable/button_update"/>
        </LinearLayout>

        <TextView
            android:background="@drawable/text_button_normal"
            android:id="@+id/textView8"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/ButtonHeight"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/MainViewSpacing"
            android:layout_marginTop="@dimen/MainViewSpacing"
            android:clickable="true"
            android:gravity="center"
            android:onClick="ReturnToMainView"
            android:text="@string/close"/>
    </LinearLayout>
</ScrollView>