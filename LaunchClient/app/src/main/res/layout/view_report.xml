<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/SelectListSpacing">

    <ImageView
        android:layout_width="@dimen/PlayerInfoIconSize"
        android:layout_height="@dimen/PlayerInfoIconSize"
        android:id="@+id/imgDoer"
        android:layout_margin="@dimen/ButtonEdgePadding"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:id="@+id/lytText"
        android:layout_gravity="center">

    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/PlayerInfoIconSize"
        android:layout_height="@dimen/PlayerInfoIconSize"
        android:id="@+id/imgDoee"
        android:layout_margin="@dimen/ButtonEdgePadding"/>
</LinearLayout>